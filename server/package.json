{
  "name": "buddhatest-server",
  "version": "1.0.0",
  "description": "Buddhasoft test server on node.js for product application",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:dev",
    "build:dev": "npm run clean && webpack --config config/webpack.dev.js --progress --profile",
    "build:prod": "npm run clean && webpack --config config/webpack.prod.js --progress --profile",
    "clean": "rimraf dist",
    "dev": "npm run watch:dev & npm run server",
    "test": "karma start karma.config.js",
    "start": "npm run build:dev && npm run server",
    "server": "nodemon dist/server.bundle.js",
    "watch": "npm run watch:dev",
    "watch:dev": "npm run clean && webpack --config config/webpack.dev.js --progress --profile --watch",
    "watch:prod": "npm run clean && webpack --config config/webpack.prod.js --progress --profile --watch"
  },
  "engines": {
    "node": "~5.6"
  },
  "author": "Denis Kondrachuk",
  "license": "ISC",
  "dependencies": {
    "express": "^4.15.2",
    "jasmine-core": "^2.6.1",
    "nodemon": "^1.11.0"
  },
  "devDependencies": {
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.35",
    "@types/jasmine": "^2.5.47",
    "@types/mongoose": "^4.7.11",
    "@types/morgan": "^1.7.32",
    "@types/node": "^7.0.15",
    "awesome-typescript-loader": "^3.1.3",
    "istanbul-instrumenter-loader": "^2.0.0",
    "karma": "^1.6.0",
    "karma-chrome-launcher": "^2.1.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.3",
    "karma-remap-coverage": "^0.1.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.3",
    "mongoose": "^4.9.7",
    "morgan": "^1.8.1",
    "nodemon": "^1.11.0",
    "optimize-js-plugin": "0.0.4",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.2.1",
    "typescript": "^2.3.2",
    "webpack": "^2.4.1",
    "webpack-merge": "^4.1.0"
  }
}
